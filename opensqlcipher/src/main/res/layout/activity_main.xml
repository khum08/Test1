<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ms="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:id="@+id/tool_bar"
        app:title="微信监听"
        app:titleTextColor="@android:color/white"
        />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_bg"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="监听中..."
        android:gravity="center"
        />


    <com.kotlin.khum.opensqlcipher.activity.CheckableItem
        android:id="@+id/auto_listen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ms:topText="@string/setting_update_title"
        ms:onText="@string/setting_update_on"
        ms:offText="@string/setting_update_off"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_state"
        />

</android.support.constraint.ConstraintLayout>